<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="500dp" android:layout_height="400dp"
                    android:layout_centerHorizontal="true" android:layout_marginTop="50dp"
                    android:id="@+id/rel_layout">
        <TextView
                android:id="@+id/distance_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" xmlns:android="http://schemas.android.com/apk/res/android"
                android:text="distance here"/>
        <ImageView
                android:id="@+id/image_view"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/distance_view"
                android:src="@drawable/camera"
                xmlns:android="http://schemas.android.com/apk/res/android"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_layout"
            android:textSize="20sp" xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="date here"/>

    <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_view"
            android:textSize="20sp" xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="caption here"/>

</RelativeLayout>




